{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "downlevelIteration": true,
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "lib"
    },
    "include": [
        "src/index.ts",
        "src/main.test.ts",
        "src/cli.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
