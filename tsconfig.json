{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "lib",
        "lib": ["ESNext"],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "module.ts",
        "cli.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
