{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"outDir": "./lib/mjs/",
		"downlevelIteration": true,
		"strict": true,
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"useUnknownInCatchVariables": false
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules",
		"src/*.test.ts"
	]
}
