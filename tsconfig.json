{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["ESNext"],
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./lib",
    },
    "include": [
        "main.ts",
        "main.test.ts",
        "cli.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
