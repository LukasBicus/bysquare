{
	"lineWidth": 100,
	"useTabs": true,
	"indentWidth": 4,
	"typescript": {
		"trailingCommas": "never",
		"arrowFunction.useParentheses": "force",
		"arguments.preferHanging": "onlySingleItem",
		"binaryExpression.operatorPosition": "nextLine",
		"ifStatement.nextControlFlowPosition": "maintain"
	},
	"includes": ["./**/*.{ts,js,json,md}"],
	"excludes": [
		"**/node_modules",
		"**/*-lock.json"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.88.2.wasm",
		"https://plugins.dprint.dev/json-0.18.0.wasm",
		"https://plugins.dprint.dev/markdown-0.16.2.wasm"
	]
}
